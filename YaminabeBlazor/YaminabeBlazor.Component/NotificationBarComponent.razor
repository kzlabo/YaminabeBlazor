@implements IDisposable

<div class="notificationbar @NotificationBarClosedClassName">
    <div class="notificationbar-content">
        @{
            for (var i = ApplicationState.NotificationMessages.Count - 1; i >= 0; i--)
            {
                var index = i;
                var message = ApplicationState.NotificationMessages[i];
                <div class="notification @GetNotificationMessageClassName(message)">
                    <div class="delete">
                        <button @onclick="((e) => OnCloseClick(e, index))">×</button>
                    </div>
                    <div class="title">
                        @message.Title
                    </div>
                    <div class="message">
                        @message.Message
                    </div>
                    <div class="time">
                        @message.NotiferDateTime.ToString("HH:mm:ss")
                    </div>
                </div>
            }
        }
    </div>
</div>
